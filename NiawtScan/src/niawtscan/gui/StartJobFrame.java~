	private void saveAsMultiStateChanged(javax.swing.event.ChangeEvent evt) {//GEN-FIRST:event_saveAsMultiStateChanged
		if (saveAsSingle.isSelected()) {
			fileNameLbl.setText("Filename:");
		} else {
			fileNameLbl.setText("Filename Prefix:");
		}
	}//GEN-LAST:event_saveAsMultiStateChanged

